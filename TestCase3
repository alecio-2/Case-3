            System.out.println("Found search result with text: " + result.getText());
        }*/


        List<WebElement> elements = driver.findElements(By.xpath("//*[contains(text(),'" + keyword + "')]"));
        if (elements.size() > 0) {
            System.out.println("Found " + elements.size() + " elements with text containing '" + keyword + "'");
            System.out.println("Search successful");
        } else {
            System.out.println("No elements found with text containing '" + keyword + "'");
            System.out.println("Search failed");
        }



/*

